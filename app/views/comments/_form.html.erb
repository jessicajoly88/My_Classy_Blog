<%= render "layouts/errors", :object => @comment %>

<%= form_for [@post, @comment] do |f| %>
  <div class="form-group">
    <%= f.label :content %>
    <br>
    <%= f.text_area :content, rows: "10", class: "form-control"%>
  </div>
    <%= f.submit "Post Comment", class: "btn btn-default center-block" %>
  <% end %>
  