<%= render "layouts/errors", :object => @post %>

<center>
<%= form_for @post do |f| %>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>
  <div class="form-group">
    <%= f.label :body %>
    <br>
    <%= f.text_area :body, cols: "80", rows: "10"%>
  </div>
  <div class="form-group">
    <%= f.label :image%>
    <%= f.text_field :image%>
  </div>
    <%= f.submit %>
  <% end %>
</center>