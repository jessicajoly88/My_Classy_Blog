<h1> Posts </h1>
<ul>
 <% @posts.each do |post| %>
   <li>
   <br>
    <%= link_to post.title, post_path(post) %>
    <small> <%=post.rating %> Likes </small>
    <small>Posted: <%= ((Time.now - post.created_at)/60).round(0)%> minutes ago</small>
   <br>
   </li>
 <% end %> 
<ul>

<hr>

<%=link_to "New Post", new_post_path, class:"btn btn-default" %>


